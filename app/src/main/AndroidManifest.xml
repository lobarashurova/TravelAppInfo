<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/travel"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/travel"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelAppInfo"
        tools:targetApi="31">
        <activity
            android:name=".screen.AboutActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".country_mvp.CountryActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.InfoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".screen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>